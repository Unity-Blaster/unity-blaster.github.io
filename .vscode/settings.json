{
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.columnSelection": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
  "editor.renderWhitespace": "all",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block-outline",
  "editor.cursorBlinking": "phase",
  "debug.confirmOnExit": "always",
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10,
  "editor.minimap.autohide": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "liveServer.settings.port": 6969,
  "better-comments.highlightPlainText": true,
  "github.copilot-labs.showBrushesLenses": true,
  "github.copilot-labs.showTestGenerationLenses": true,

  "markdown-checkbox.typeOfBulletPoint": "+",
  "markdown-checkbox.strikeThroughWhenChecked": true,
  "markdown-checkbox.italicWhenChecked": true,
  "markdown-checkbox.dateFormat": "DD-MM-YYYY",
  "IDX.aI.enableInlineCompletion": true
}
